# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
indent_size = 4